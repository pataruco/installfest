// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
	"edit_predictions": {
		"disabled_globs": ["**/.env"],
		"mode": "eager"
	},
	"agent": {
		"default_model": {
			"provider": "zed.dev",
			"model": "claude-opus-4-6-thinking",
			"enable_thinking": true,
			"effort": "high"
		},
		"favorite_models": [],
		"model_parameters": []
	},
	"icon_theme": "Catppuccin Mocha",
	"base_keymap": "VSCode",
	"buffer_font_family": "Monaco",
	"buffer_font_size": 16,
	"ui_font_size": 16,
	"theme": {
		"mode": "system",
		"light": "One Light",
		"dark": "One Dark Pro"
	},
	"languages": {
		"JavaScript": {
			"formatter": { "language_server": { "name": "biome" } },
			"code_actions_on_format": {
				"source.fixAll.biome": true,
				"source.organizeImports.biome": true
			},
			"colorize_brackets": true
		},
		"TypeScript": {
			"formatter": { "language_server": { "name": "biome" } },
			"code_actions_on_format": {
				"source.fixAll.biome": true,
				"source.organizeImports.biome": true
			},
			"colorize_brackets": true
		},
		"TSX": {
			"formatter": { "language_server": { "name": "biome" } },
			"code_actions_on_format": {
				"source.fixAll.biome": true,
				"source.organizeImports.biome": true
			},
			"colorize_brackets": true
		},
		"JSON": {
			"formatter": { "language_server": { "name": "biome" } },
			"code_actions_on_format": {
				"source.fixAll.biome": true,
				"source.organizeImports.biome": true,
				"source.sortImports.biome": true,
				"source.sortProperties.biome": true,
				"source.sortKeys.biome": true,
				"source.sortAttributes.biome": true
			},
			"colorize_brackets": true
		},
		"JSONC": {
			"formatter": { "language_server": { "name": "biome" } },
			"code_actions_on_format": {
				"source.fixAll.biome": true
			},
			"colorize_brackets": true
		},
		"CSS": {
			"formatter": { "language_server": { "name": "biome" } },
			"code_actions_on_format": {
				"source.fixAll.biome": true
			},
			"colorize_brackets": true
		},
		"GraphQL": {
			"formatter": { "language_server": { "name": "biome" } },
			"code_actions_on_format": {
				"source.fixAll.biome": true
			},
			"colorize_brackets": true
		},
		"HCL": {
			"colorize_brackets": true
		},
		"Terraform": {
			"colorize_brackets": true
		},
		"Helm": {
			"colorize_brackets": true
		},
		"YAML": {
			"formatter": "language_server"
		}
	},
	"lsp": {
		"yaml-language-server": {
			"settings": {
				"yaml": {
					"format": {
						"enable": true,
						"singleQuote": false
					}
				}
			}
		},
		"rust-analyzer": {
			"initialization_options": {
				"cargo": {
					"features": "all"
				},
				"check": {
					"command": "clippy",
					"extraArgs": ["--", "-W", "clippy::pedantic", "clippy::nursery"]
				}
			}
		}
	}
}
